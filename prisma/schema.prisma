generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model FileObject {
  id        String   @id @default(cuid())
  bucket    String
  key       String   @unique
  mimeType  String
  size      Int?
  etag      String?
  checksum  String?
  isPublic  Boolean  @default(true)
  ownerId   String?
  tags      Json?
  createdAt DateTime @default(now())

  @@index([bucket, key])
  @@index([ownerId])
  @@map("fileobject")
}

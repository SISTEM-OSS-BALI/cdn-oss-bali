generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String       @id @default(cuid())
  name      String
  apiKeys   ApiKey[]
  files     FileObject[]
  createdAt DateTime     @default(now())
}

model ApiKey {
  id        String  @id @default(cuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  hash     String @unique
  publicId String @unique
  prefix   String

  // âœ… default dengan literal JSON string
  scopes     Json @default("[]") // contoh nilai: ["upload","download"]
  allowCIDRs Json @default("[]") // contoh nilai: ["203.0.113.10","10.0.0.0/24"]

  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?
}

model FileObject {
  id        String   @id @default(cuid())
  bucket    String
  key       String   @unique
  mimeType  String
  size      Int?
  etag      String?
  checksum  String?
  isPublic  Boolean  @default(true)
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  tags      Json?
  createdAt DateTime @default(now())

  @@index([bucket, key])
  @@index([projectId])
}
